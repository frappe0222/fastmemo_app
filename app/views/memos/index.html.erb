<div class="header">
  <%= link_to 'Fast Memo app', root_path %>
  <%= link_to '新規メモ', '/memos/new' %>
</div>

<div class="messages">
 <% @memos.each do |memo| %>
    <ul class="content">
     <%= memo.created_at %>
     <li class="message">
     <%= memo.content %>
       <ul>
        <li class="btn">
            <%= link_to "編集", edit_memo_path(memo) %>
        </li>
          <li class="btn">
              <%= link_to "削除", memo_path(memo.id), method: :delete %>
          </li>
       </ul>
      </li>
     </ul> 
<% end %>
</div>